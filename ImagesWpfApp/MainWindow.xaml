<Window x:Class="ImagesWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImagesWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1"></Frame>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="btnToListView" Content="ListView" Click="btnToListView_Click"></Button>
            <Button x:Name="btnToDataGrid" Content="DataGrid" Margin="8 0 8 0" Click="btnToDataGrid_Click"></Button>
            <Button x:Name="btnItemsControl" Content="ItemsControl" Click="btnItemsControl_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
